  <!-- Royal -->
  <ThingDef ParentName="AncientHatMakeableBase">
    <defName>AR_Nemes</defName>
    <label>Nemes</label>
    <description>A crown that is made after the headscarf. It was popular to the Pharaos trough all era and not bound to ceremonies.</description>
