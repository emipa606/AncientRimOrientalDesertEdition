      <texPath>Items/Apparel/NemesOnMap</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costList>
      <Cloth>50</Cloth>
      <Gold>50</Gold>
    </costList>
    <statBases>
      <WorkToMake>10000</WorkToMake>
      <Mass>0.05</Mass>
      <ArmorRating_Sharp>0.04</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.02</ArmorRating_Blunt>
      <ArmorRating_Heat>0.10</ArmorRating_Heat>
      <Insulation_Heat>3</Insulation_Heat>
      <EquipDelay>0.8</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <SocialImpact>0.5</SocialImpact>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Items/Apparel/Hats/Nemes</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>EgyptianRoyal</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
    <recipeMaker>
      <researchPrerequisite>AR_Project_Oriental_Culture</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>
